FROM ddp-base:latest

ARG KAFKA_VERSION
ENV KAFKA_SCRIPTS /home/kafka/scripts

COPY ./downloads/kafka_2.12-${KAFKA_VERSION}.tgz        /home/kafka/dist/

COPY ./scripts/kafka/kafka-setup.sh                     ${KAFKA_SCRIPTS}/
COPY ./scripts/kafka/kafka.sh                           ${KAFKA_SCRIPTS}/

RUN mkdir /opt/kafka && \
    tar xvfz /home/kafka/dist/kafka_2.12-${KAFKA_VERSION}.tgz --directory=/opt/kafka --strip 1 && \
    rm -f /home/kafka/dist/kafka_2.12-${KAFKA_VERSION}.tgz

ENV KAFKA_HOME /opt/kafka
ENV PATH       /usr/java/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/opt/kafka/bin

EXPOSE 9092

ENTRYPOINT [ "/home/kafka/scripts/kafka.sh" ]
